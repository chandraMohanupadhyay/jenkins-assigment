pipeline {
    agent any

    environment {
        CACHE_DIR = 'cache'
        APP_NAME  = 'demo-app'
        BUILD_ENV = 'dev'
        GIT_URL   = 'https://github.com/chandraMohanupadhyay/jenkins-assigment.git'
        BRANCH    = 'master'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                git branch: "${BRANCH}", url: "${GIT_URL}"
            }
        }

        stage('Prepare Dependencies (Cache)') {
            when {
                expression {
                    !fileExists("${CACHE_DIR}/dependencies.txt")
                }
            }
            steps {
                echo 'Cache not found. Creating dependencies cache...'
                sh '''
                    mkdir -p cache
                    echo "java=17" > cache/dependencies.txt
                    echo "maven=3.9" >> cache/dependencies.txt
                '''
            }
        }

        stage('Use Cached Dependencies') {
            when {
                expression {
                    fileExists("${CACHE_DIR}/dependencies.txt")
                }
            }
            steps {
                echo 'Using cached dependencies:'
                sh 'cat cache/dependencies.txt'
            }
        }

        stage('Build') {
            steps {
                echo "Building ${APP_NAME} in ${BUILD_ENV} environment"
                sh 'echo Build successful'
            }
        }

        stage('Test') {
            steps {
                retry(2) {
                    echo 'Running tests...'
                    sh 'bash scripts/run-tests.sh'
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo 'Deploying application...'
                sh 'echo Deployment successful'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully'
        }
        failure {
            echo 'Pipeline failed. Please check logs.'
        }
        always {
            echo 'Pipeline execution finished'
        }
    }
}
